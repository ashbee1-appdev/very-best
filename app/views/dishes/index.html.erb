<div class="page-header">
  <h1>
    Dishes
    <a href="/dishes/new" class="btn btn-lg btn-success">New Dish</a>
    <a href="/venues/new" class="btn btn-lg btn-warning">New Venue</a>
  </h1>
</div>

<div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
      <p class="lead">Narrow results:</p>


      <div class="form-group">
        <%= f.label :name_cont, "Name contains" %>
        <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
      </div>

      <% @cuisines = Cuisine.all %>
      <label for="q_cuisine_id_eq_any">Cuisine</label>
      <% @cuisines.each do|cuisine| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="q[cuisine_id_eq_any][]" id="q_cuisine_id_eq_any_" value="<%= cuisine.id %>" />
            <%= cuisine.name %>
          </label>
        </div>
      <% end %>

      <script type="text/javascript">
        $(function () {
            $('#created_atgteqPicker').datetimepicker({
                format: 'YYYY-MM-DD hh:mm:SS'
            });
            $('#created_atlteqPicker').datetimepicker({
                useCurrent: false,
                format: 'YYYY-MM-DD hh:mm:SS'
            });
            $('#created_atgteqPicker').on("dp.change", function (e) {
                $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
            });
            $('#created_atlteqPicker').on("dp.change", function (e) {
                $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
            });
        });
      </script>


      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/dishes" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Cuisine</th>

        <th>Venues</th>
        <th>Actions</th>
      </tr>

      <% @dishes.each do |dish| %>
        <tr>
          <td>
            <a href="/dishes/<%= dish.id %>">
              <a href="/dishes/<%= dish.id %>"> <%= dish.name %></a>
            </a>
          </td>
          <td>
            <% bookmark = Bookmark.where(:user_id => current_user.id, :dish_id => dish.id).first %>
            <% if bookmark.present? %>
              <%= Venue.find(bookmark.venue_id).name %>
            <% else %>
              <form action="/create_bookmark" class="form-inline" method="post">

                <input type="hidden" name="dish_id" value="<%= dish.id %>">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">

                <!-- Label and input for venue_id -->
                <label for="venue_id" class="control-label sr-only">
                  Venue
                </label>
                <%= select_tag("venue_id", options_from_collection_for_select(Venue.all, :id, :name, @venues.try(:venue_id)),:include_blank => "Choose a venue...") %>
                <button class="btn btn-primary btn-sm">
                  <i class="fa fa-heart"></i>
                </button>
              </form>
            <% end %>
          </td>
          <td>
            <% if dish.cuisine.present? %>
              <a href="/cuisines/<%= dish.cuisine.id %>">
                <%= dish.cuisine.name %>
              </a>

            </td>


          <% end %>
          <td>
            <a href="/dishes/<%= dish.id %>" class="btn btn-primary">Show</a>
            <a href="/dishes/<%= dish.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_dish/<%= dish.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @dishes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
